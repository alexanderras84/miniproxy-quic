{
  "log": {
    "level": "debug",
    "output": "stderr"
  },
  "inbounds": [
    {
      "type": "tproxy",
      "tag": "tproxy-in-443",
      "listen": "0.0.0.0",
      "listen_port": 443,
      "sniff": true,
      "sniff_override_destination": true,
      "sniff_timeout": "1000ms",
      "domain_strategy": "ipv4_only",
      "udp_disable_domain_unmapping": true,
      "udp_fragment": true
    },
    {
      "type": "tproxy",
      "tag": "tproxy-in-80",
      "listen": "0.0.0.0",
      "listen_port": 80,
      "sniff": true,
      "sniff_override_destination": true,
      "sniff_timeout": "1000ms",
      "domain_strategy": "ipv4_only",
      "udp_disable_domain_unmapping": true,
      "udp_fragment": true
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct",
      "tcp_fast_open": true,
      "udp_fragment": true
    },
    {
      "type": "block",
      "tag": "blocked"
    }
  ],
  "route": {
    "rules": [],  // <-- your script will inject rules here!
    "auto_detect_interface": true,
    "final": "direct"
  }
}
