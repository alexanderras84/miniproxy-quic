{
  "log": {
    "level": "info",
    "output": "stderr",
    "timestamp": true
  },
  "inbounds": [
    {
      "type": "direct",
      "tag": "tcp-in",
      "listen": "::",
      "listen_port": 443,
      "network": "tcp",
      "sniff": true,
      "sniff_override_destination": true,
      "sniff_timeout": "300ms",
      "domain_strategy": "prefer_ipv4"
    },
    {
      "type": "direct",
      "tag": "udp-in",
      "listen": "::",
      "listen_port": 443,
      "network": "udp",
      "sniff": true,
      "sniff_override_destination": true,
      "sniff_timeout": "300ms",
      "udp_fragment": true
    },
    {
      "type": "direct",
      "tag": "http-in",
      "listen": "::",
      "listen_port": 80,
      "network": "tcp",
      "sniff": true,
      "sniff_override_destination": true
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct-out",
      "tcp_fast_open": true,
      "udp_fragment": true,
      "domain_strategy": "prefer_ipv4" 
    }
  ],
  "route": {
    "auto_detect_interface": true,
    "final": "direct-out",
    "rules": [
      {
        "protocol": "dns",
        "outbound": "direct-out"
      }
    ]
  }
}
